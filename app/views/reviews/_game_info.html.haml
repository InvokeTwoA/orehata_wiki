.panel.panel-default
  .panel-heading
    %h3= @game.title
  .panel-body
    .scroll-table
      - if @game.asin.present?
        .col-md-5.col-sm-12
          .center
            = @game.asin.html_safe
        .col-md-7.col-sm-12
          .review_graph
            = high_chart("radar", @chart)
      - else
        .col-sm-12
          .review_graph
            = high_chart("radar", @chart)
      - if @game.pv_url.present?
        %h3 PV
        = @game.pv_url.html_safe


$('.comment_note').hide()
- if params[:project_id].present?
  - @project = params[:project_id]
- else
  - @project = @page.project.identifier 
- if params[:page] == 'Wiki'
  - comments = WikiComment.where(page: 'wiki', project_id: @project).recent.page(params[:kaminari_page]).per(10)
- else
  - comments = WikiComment.where(page: params[:id], project_id: @project).recent.page(params[:kaminari_page]).per(10)
$("#comments").html("#{ j render('/wiki_comments/list', comments: comments)}")
